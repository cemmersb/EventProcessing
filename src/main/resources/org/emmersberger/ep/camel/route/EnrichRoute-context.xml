<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <!-- Discovering all route definitions in 'org.emmersberger.ep.camel.route' -->
  <context:component-scan base-package="org.emmersberger.ep.camel.route"/>
  
  <!-- Creating the 'enrichContext' that contains all route definitions injected via the component-scan -->
  <camel:camelContext id="enrichContext">
    <camel:contextScan/>
  </camel:camelContext>
  
</beans>